namespace callbacks {};

[Error]
enum TelephoneError {
  "Busy",
  "InternalTelephoneError",
};

interface Telephone {
  constructor();
  [Throws=TelephoneError]
  string call(CallAnswerer answerer);

  string call_no_throw(CallAnswererNoThrow answerer);
};

callback interface CallAnswerer {
  [Throws=TelephoneError]
  string answer();
};

callback interface CallAnswererNoThrow {
  string answer();
};
